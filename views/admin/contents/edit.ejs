<!DOCTYPE html>
<html>
<head>
    <title>Edit Contents | Admin</title>
    <%-include('../../include/head')%>
    <script src="/ckeditor/ckeditor.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <%-include('../../include/nav')%>
    <%-include('../../include/alert')%>
    <div class="container white pt-10 pb-30" id="mainpage">
        <div class="grid-9-3">
            <div class="p-20">
                <div class="tab">
                    <a href="/admin" class="link">Admin</a> / Add Content
                </div>
                <h1 class="bl-orange">Edit "<%=content.title%>" in Contents.</h1>
                <form action="/admin/contents/edit" method="post">
                    <input type="hidden" name="id" value="<%=content.id%>">
                    <input type="text" name="title" value="<%=content.title%>" maxlength="200">
                    <input type="text" name="cover" value="<%=content.cover%>" maxlength="200">
                    <input type="hidden" name="writter" value="<%=content.writter%>" maxlength="6">
                    <input type="text" name="category" value="<%=content.category%>" maxlength="50">
                    <textarea name="content" rows="5" id="editor"><%=content.contents%></textarea>
                    <script>
                        CKEDITOR.replace( 'editor' );
                    </script>
                    <input type="submit" value="Edit" class="btn darkblue">
                </form> 
            </div>
            <div class="p-20">
                <%-include('../include/sidebar')%>
            </div>
        </div>
    </div>
</body>
</html>