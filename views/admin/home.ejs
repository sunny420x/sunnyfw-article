<!DOCTYPE html>
<html>
<head>
    <title>Admin | Sunny-Framework</title>
    <%-include('../include/head')%>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <%-include('../include/nav')%>
    <div class="container white mb-50" id="mainpage">
        <div class="grid-8-4">
            <div class="row">
                <div class="tab">
                    <a href="/admin" class="link">Admin</a>
                </div>
                <h1 class="bl-darkblue">Contents Management. <button class="btn green" onclick="window.location.href='/admin/contents/add'">Add</button></h1>
                <table class="table">
                    <tr>
                        <th>#</th>
                        <th>Titile</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>    
                    <%
                    contents.forEach((row) => {
                    %>
                    <tr>
                        <td><%=row.id%></td>
                        <td><%=row.title%></td>
                        <td><button class="btn orange" onclick="window.location.href='/admin/contents/edit/<%=row.id%>'">Edit</button></td>
                        <td><button class="btn red" onclick="                            Swal.fire({
                            title: 'Are you sure?',
                            text: 'You wont be able to revert this!',
                            icon: 'warning',
                            showCancelButton: true,
                            confirmButtonColor: '#3085d6',
                            cancelButtonColor: '#d33',
                            confirmButtonText: 'Yes, delete it!'
                                }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location = '/admin/contents/delete/<%=row.id%>';
                                }
                            })">Delete</button></td>
                    </tr>
                    <%
                    })
                    %>
                </table>
            </div>
            <div class="row">
                <%-include('include/sidebar')%>
            </div>
        </div>
    </div>
</body>
</html>