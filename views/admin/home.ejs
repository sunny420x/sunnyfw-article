<!DOCTYPE html>
<html>
<head>
    <title>Admin | Sunny-Framework</title>
    <%-include('../include/head')%>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <%-include('../include/nav')%>
    <div class="container white mt-70 mb-50">
        <div class="grid-8-4">
            <div class="row">
                <div class="px-20">
                    <table class="table">
                        <tr>
                            <th>#</th>
                            <th>Titile</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>    
                        <%
                        contents.forEach((row) => {
                        %>
                        <tr>
                        
                            <td><%=row.id%></td>
                            <td><%=row.title%></td>
                            <td><button class="btn darkblue" onclick="window.location.href='/admin/edit/<%=row.id%>'">Edit</button></td>
                            <td><button class="btn red" onclick="                            Swal.fire({
                                title: 'Are you sure?',
                                text: 'You wont be able to revert this!',
                                icon: 'warning',
                                showCancelButton: true,
                                confirmButtonColor: '#3085d6',
                                cancelButtonColor: '#d33',
                                confirmButtonText: 'Yes, delete it!'
                                    }).then((result) => {
                                    if (result.isConfirmed) {
                                        window.location = '/admin/delete/<%=row.id%>';
                                    }
                                })">Delete</button></td>
                        </tr>
                        <%
                        })
                        %>
                    </table>
                </div>
            </div>
            <div class="row">
                <%-include('include/sidebar')%>
            </div>
        </div>
    </div>
    <%-include('../include/footer')%>
</body>
</html>