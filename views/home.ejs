<!DOCTYPE html>
<html>
<head>
    <title>Home | Sunny-Framework</title>
    <%-include('include/head')%>
</head>
<body>
    <%-include('include/nav')%>
    <div class="container white py-20" id="mainpage">
        <div class="grid-1">
            <div class="grid-2">
                <div class="cover"><img class="w-100" src="<%=contents[0].cover%>" /></div>
                <div class="content">
                    <h1><a href="/read/<%=contents[0].id%>" class="link"><%=contents[0].title%></a></h1>
                    <p><%=contents[0].contents.replace(/(<([^>]+)>)/ig,'').substring(0,500)%></p>
                </div>
            </div>
        </div>
        <div class="grid-8-4">
            <div class="row">
                <h1 class="bl-darkblue">More Contents</h1>
                <div class="grid-3">
                    <%
                    contents.forEach((row) => {
                    %>
                    <div class="media">
                        <div class="cover"><img class="w-100" src="https://sunny420x.com/img/default.jpg" /></div>
                        <div class="content">
                          <h1><a href="/read/<%=row.id%>"><%=row.title%></a></h1>
                          <p><%=row.contents.replace(/(<([^>]+)>)/ig,'').substring(0,200)%></p>
                        </div>
                      </div>
                    <%
                    })
                    %>
                </div>
            </div>
            <div class="row">
                <h1 class="bl-orange">Category</h1>
                    <%
                    category.forEach((row) => {
                    %>
                    <a href="" class="capsule darkblue"><%=row.category%></a>
                    <%
                    })
                    %>
            </div>
        </div>
    </div>
    <%-include('include/footer')%>
</body>
</html>